<div class="container pt-5">
  <div class="row mt-5">
    <div class="col-md-4 mt-5">
      <h3 class="mb-5">カテゴリ編集</h3>
      <%= form_with(model: @category, local: true) do |f| %>
        <%= f.label :name, "カテゴリ名" %>
        <%= f.text_field :name %>
        <%= f.submit "更新", class: "btn btn-outline-success" %>
      <% end %>
    </div>
  </div>
</div>